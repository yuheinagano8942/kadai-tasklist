<h1>タスク一覧</h1>

<% if @task.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>カラム名</th>
        <th>タスク</th>
      </tr>
      </thead>
      <tbody>
        <% @task.each do |task| %>
        <tr>
        <td><%= link_to task.id, task%></td>
        <td><%= task.status %></td>
        <td><%= task.content %></td>
        </tr>
        <% end %>
      </tbody>
      </table>
    <div>
      <%= paginate @task %>
    </div>
    <% end %>


<%= link_to '新規タスクの投稿', new_task_path, class: "btn btn-primary" %>